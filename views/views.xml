<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_student_info_list" model="ir.ui.view">
        <field name="name">student.info.list</field>
        <field name="model">student.info</field> 
        <field name="arch" type="xml">
            <list string="Student Records" sample="1">
                <field name="reference_no"/>
                <field name="stu_name" string="Name"/>
                <field name="branch"/>
                <field name="roll_no"/>
                <field name="gender"/> 
                <field name="gpa"/>   
                <field name="is_graduated" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_student_info_form" model="ir.ui.view">
        <field name="name">student.info.form</field>
        <field name="model">student.info</field> 
        <field name="arch" type="xml">
            <form string="Student Details">
                <sheet> 
                    <div class="oe_title">
                        <h1><field name="reference_no"/></h1>
                    </div>
                    <field name="student_image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="stu_name"/>
                            <field name="category_id"/>
                            <field name="branch"/>
                            <field name="roll_no"/>
                            <field name="dob"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="gpa"/>
                            <field name="grade"/>
                            <field name="is_graduated"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <group>
                                <field name="description" placeholder="Enter student description here..."/>
                            </group>
                        </page>
                        <page string="Academic History">
                            <group>
                                <field name="previous_school" groups="new_module.group_my_module_manager"/>
                                <field name="admission_date"/>
                                <field name="scholarship_details" groups="new_module.group_my_module_manager"/>
                                <field name="subject_ids"/>
                                <field name="skills_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_student_info_kanban" model="ir.ui.view">
        <field name="name">student.info.kanban</field>
        <field name="model">student.info</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click" style="position: relative; padding-right: 110px; min-height: 100px;">
                            <div style="position: absolute; top: 0; right: 0; width: 80px; height: 80px;">
                                <field name="student_image" widget="image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="stu_name"/></strong>
                                <div><field name="reference_no"/></div>
                                <div>Branch: <field name="branch"/></div>
                                <div>Roll No: <field name="roll_no"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_student_info_calendar" model="ir.ui.view">
        <field name="name">student.info.calendar</field>
        <field name="model">student.info</field>
        <field name="arch" type="xml">
            <calendar string="Student Birthdays" date_start="dob" color="branch" mode="month">
                <field name="stu_name"/>
                <field name="branch"/>
            </calendar> 
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_student_info_graph" model="ir.ui.view">
        <field name="name">student.info.graph</field>
        <field name="model">student.info</field>
        <field name="arch" type="xml">
            <graph string="Student Analysis" type="bar" sample="1">
                <field name="branch" type="row"/>
                <field name="gpa" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Window Action -->
    <record id="action_student_info" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.info</field> 
        <field name="view_mode">kanban,list,form,calendar,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first student record!</p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_student_root" name="Student Management" sequence="10"/>
    <menuitem id="menu_student_records" name="Records" parent="menu_student_root" action="action_student_info" sequence="10"/>
    <menuitem id="menu_student_drafts" name="Drafts" parent="menu_student_records" action="action_student_info" sequence="5"/>
</odoo>
