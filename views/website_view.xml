<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <!-- menu -->
    <record id="menu_student_form" model="website.menu"> 
    <field name="name">Student Form</field> 
    <field name="url">/student-form</field> 
    <field name="parent_id" ref="website.main_menu"/> 
    <field name="sequence" eval="60"/> </record>

    <template id="student_form_page" name="Student Form Page">
        <t t-call="website.layout">                      
<!-- for displaying default header footer of website  -->
            <style>
                .student-card {
                    max-width: 700px;
                    margin: 60px auto;
                    padding: 35px;
                    border-radius: 15px;
                    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
                    background: #ffffff;
                }

                .student-card h2 {
                    font-weight: 600;
                    margin-bottom: 25px;
                    text-align: center;
                }

                .form-control {
                    border-radius: 8px;
                    padding: 10px;
                }

                .btn-primary {
                    border-radius: 8px;
                    padding: 8px 25px;
                }

                .error-text {
                    color: red;
                    font-size: 13px;
                }

                 .success-popup {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0,0,0,0.6);
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    z-index: 9999;
                    animation: fadeIn 0.3s ease-in-out;
                }

                .success-box {
                    background: white;
                    padding: 40px 30px;
                    border-radius: 14px;
                    text-align: center;
                    width: 380px;
                    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
                    position: relative;
                    animation: slideUp 0.35s ease-out;
                }

                .success-box h4 {
                    font-size: 22px;
                    font-weight: 600;
                    color: #2c3e50;
                    margin-bottom: 10px;
                }

                .success-box p {
                    color: #6c757d;
                    font-size: 15px;
                }

                .close-btn {
                    position: absolute;
                    right: 15px;
                    top: 12px;
                    cursor: pointer;
                    font-size: 18px;
                    color: #888;
                    transition: 0.2s;
                }

                .close-btn:hover {
                    color: #000;
                    transform: scale(1.1);
                }

                /* Animations */
                @keyframes fadeIn {
                    from { opacity: 0; }
                    to { opacity: 1; }
                }

                @keyframes slideUp {
                    from {
                        transform: translateY(20px);
                        opacity: 0;
                    }
                    to {
                        transform: translateY(0);
                        opacity: 1;
                    }
                }

            </style>

            <div class="student-card">

                <h2>Student Registration</h2>

                <!-- SUCCESS POPUP -->
                <t t-if="success"> 
                    <!-- whenever success=true from backend then only show popup -->
                    <div class="success-popup">
                        <div class="success-box">
                            <span class="close-btn"
                                  onclick="window.location.href='/student-form'">âœ–</span>
                            <h4>
                                Thank You,
                                <t t-esc="old_values.get('stu_name')"/>!
                            </h4>
                            <p>Form submitted successfully.</p>
                        </div>
                    </div>
                </t>

                <form action="/student-form/submit" method="post">
                    <input type="hidden"
                           name="csrf_token"
                           t-att-value="request.csrf_token()"/>

                    <t t-foreach="fields.items()" t-as="field">
                        <div class="mb-3">
                            <label>
                                <t t-esc="field[1]['string']"/>

                                <!-- Required Star -->
                                <t t-if="field[0] in ['stu_name','branch','roll_no','gpa','email']">
                                    <span style="color:red;"> *</span>
                                </t>
                            </label>

                            <!-- CHAR / TEXT -->
                            <input t-if="field[1]['type'] in ['char','text']"
                                   type="text"
                                   t-att-name="field[0]"
                                   class="form-control"
                                   t-att-value="old_values.get(field[0]) if old_values else ''"
                                   t-att-readonly="success"/>

                            <!-- INTEGER -->
                            <input t-elif="field[1]['type']=='integer'"
                                   type="number"
                                   t-att-name="field[0]"
                                   class="form-control"
                                   t-att-value="old_values.get(field[0]) if old_values else ''"
                                   t-att-readonly="success"/>

                            <!-- FLOAT -->
                            <input t-elif="field[1]['type']=='float'"
                                   type="number" step="0.01"
                                   t-att-name="field[0]"
                                   class="form-control"
                                   t-att-value="old_values.get(field[0]) if old_values else ''"
                                   t-att-readonly="success"/>

                            <!-- SELECTION -->
                            <select t-elif="field[1]['type']=='selection'"
                                    t-att-name="field[0]"
                                    class="form-control"
                                    t-att-disabled="success">
                                <t t-foreach="field[1]['selection']" t-as="option">
                                    <option t-att-value="option[0]"
                                            t-att-selected="option[0] == old_values.get(field[0]) if old_values else False">
                                        <t t-esc="option[1]"/>
                                    </option>
                                </t>
                            </select>

                            <!-- FIELD ERROR -->
                            <t t-if="field_errors and field[0] in field_errors">
                                <div class="error-text">
                                    <t t-esc="field_errors[field[0]]"/>
                                </div>
                            </t>

                        </div>
                    </t>

                    <t t-if="not success">
                        <button type="submit"
                                class="btn btn-primary">
                            Submit
                        </button>
                    </t>

                </form>

            </div>

        </t>
    </template>

</odoo>
