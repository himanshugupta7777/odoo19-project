<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_order_form_inherit_student" model="ir.ui.view">
            <field name="name">website.form.inherit.student</field>
            <field name="model">website</field>
            <field name="inherit_id" ref="website.view_website_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='language_ids']" position="after">
                    <field name="student_id" placeholder="Select Student..."/>
                    <field name="student_display_name"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>